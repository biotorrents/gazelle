{% extends "base.twig" %}


{% block content %}

<section>
<h2>{{ env.bonusPoints }} web store</h2>

<p>
    Please find below a list of things you can buy with your {{ env.bonusPoints }}.
</p>
</section>


{# torrents #}
<section>
<h3>Torrents</h3>

<table>
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td><a href="/store/checkout?item=randomFreeleech">Random freeleech</a></td>
            <td>{{ bonusPoints.randomFreeleechCost|number_format }}</td>
            <td>Make a random torrent freeleech for one day</td>
        </tr>

        <tr>
            <td><a href="/store/checkout?item=specificFreeleech">Specific freeleech</a></td>
            <td>{{ bonusPoints.specificFreeleechCost|number_format }}</td>
            <td>Make a torrent of your choice freeleech for one day</td>
        </tr>

        <tr>
            <td><a href="/store/checkout?item=freeleechToken">Freeleech token</a></td>
            <td>{{ bonusPoints.freeleechTokenCost|number_format }}</td>
            <td>Purchase a freeleech token that you can use at leisure</td>
        </tr>

        <tr>
            <td><a href="/store/checkout?item=neutralLeechTag">Neutral leech a tag</a></td>
            <td>{{ bonusPoints.neutralLeechTagCost|number_format }}</td>
            <td>Make all torrents with a certain tag neutral leech for one day</td>
        </tr>

        <tr>
            <td><a href="/store/checkout?item=freeleechTag">Freeleech a tag</a></td>
            <td>{{ bonusPoints.freeleechTagCost|number_format }}</td>
            <td>Make all torrents with a certain tag freeleech for one day</td>
        </tr>

        <tr>
            <td><a href="/store/checkout?item=neutralLeechCategory">Neutral leech a category</a></td>
            <td>{{ bonusPoints.neutralLeechCategoryCost|number_format }}</td>
            <td>Make all torrents in a certain category neutral leech for one day</td>
        </tr>

        <tr>
            <td><a href="/store/checkout?item=freeleechCategory">Freeleech a category</a></td>
            <td>{{ bonusPoints.freeleechCategoryCost|number_format }}</td>
            <td>Make all torrents in a certain category freeleech for one day</td>
        </tr>

    </tbody>
</table>
</section>


