{% extends "base.twig" %}


{% block content %}

<table>
    <tr>
        <th>Category</th>
        <th>Topics</th>
        <th>Posts</th>
    </tr>

    {% for category in categories %}
    <tr>
        <td>
            <a href="/boards/{{ category.slug }}">{{ category.name }}</a>
            <br />
            {{ category.description_text }}
        </td>

        <td>{{ category.topic_count }}</td>
        <td>{{ category.post_count }}</td>
    </tr>
    {% endfor %}

</table>

{% endblock %}


{% block sidebar %}

<h2>Latest</h2>

<ul>

    {% for topic in latestTopics %}
    <li>
        <a href="/boards/{{ topic.categorySlug }}/{{ topic.slug }}">{{ topic.title }}</a>
        <br />
        {{ topic.last_posted_at|relativeTime }}
    </li>
    {% endfor %}

</ul>

{% endblock %}