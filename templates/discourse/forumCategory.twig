{% extends "base.twig" %}


{% block content %}

<table class="u-full-width">
    <tr>
        <th class="center"></th>
        <th class="u-full-width">Topic</th>
        <th class="center">Replies</th>
        <th class="center">Views</th>
        <th class="right">Activity</th>
    </tr>

    {% for topic in topics %}
    <tr>
        <td class="nobr">
            {% if topic.unseen == true %}
            <span title="unseen">‚≠ê</span>
            {% endif %}

            {% if topic.pinned == true %}
            <span title="pinned">üìå</span>
            {% endif %}

            {% if topic.closed == true %}
            <span title="closed">üîí</span>
            {% endif %}

            {% if topic.archived == true %}
            <span title="archived">üóÉÔ∏è</span>
            {% endif %}
        </td>

        <td>
            <a href="/boards/{{ category.slug}}/{{ topic.slug }}">{{ topic.title }}</a>

            {% if topic.tags is not empty %}
            <br />

            {% for tag in topic.tags %}
            <a href="/tag/{{ tag }}">{{ tag }}</a>

            {% endfor %}
            {% endif %}

        </td>

        <td>{{ topic.reply_count }}</td>
        <td>{{ topic.views }}</td>

        {% if topic.last_posted_at is not null %}
        <td class="nobr">{{ topic.last_posted_at|relativeTime }}</td>
        {% else %}
        <td class="nobr">{{ topic.created_at|relativeTime }}</td>
        {% endif %}

    </tr>
    {% endfor %}

</table>

{% endblock %}