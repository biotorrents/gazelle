{##
 # search results table entry
 #}

{# torrent group #}
<tr>

	{# grouped #}
	{# <td /> #}


	{# category icon #}
	<td class="center">
		{{item.category_id|categoryIcon }}
	</td>


	{# title #}
	<td class="tableGroup" colspan="6">
<div class="flexColumn">

		{# title link #}
		<a class="torrentTitle" href="torrents.php?id={{ item.id }}" {# open tag #}

    {% if item.picture %}
        data-cover="{{ item.picture }}" {# open tag #}
    {% endif %}

    dir="ltr">
			{{ item.title|raw }}
		</a>

		<div class="flexRow">
			{# year #}
			{% if item.year %}
				<span class="tooltip" title="Year">📅 {{ item.year }}</span>
			{% endif %}

			{# identifier #}
			{% if item.identifier %}
				<span class="tooltip" title="Identifier">🔑 {{ item.identifier }}</span>

			{% endif %}

			{# subject #}
			{% if item.subject %}
				<span class="tooltip" title="Organism">🦠 {{ item.subject }}
					{# object #}
					{{ (item.object) ? "<em>#{item.object}</em>"|raw : "" }}
				</span>
			{% endif %}

			{# workgroup #}
			{% if item.workgroup %}
				<span class="tooltip" title="Workgroup">🏫 {{ item.workgroup|raw }}</span>
			{% endif %}

			{# location #}
			{% if item.location %}
				<span class="tooltip" title="Location">📍 {{ item.location|raw }}</span>
			{% endif %}
		</div>

		{# tags #}
		{% if item.tag_list is not empty %}
			<div class="tooltip torrentTags" title="Tags">#️ {{ displayTags(item.tag_list)|raw }}</div>
		{% endif %}

		{# creators #}
		{% if item.Artists is not empty %}
			<div class="tooltip" title="Creators">🧑‍🔬 {{ displayCreators(item.Artists)|raw }}</div>
		{% endif %}

		{#
		{% if extra_info|default(false) %}
		  <br />
		  <span class="torrent_info">
		    {{ extra_info|raw }}
		  </span>
		{% endif %}
		#}

</div>
	</td>


	{# timeAdded # }
	<td></td>


	{# data size # }
	<td></td>


	{# file count # }
	<td></td>


	{# seeders # }
	<td></td>


	{# leechers # }
	<td></td>


	{# snatches # }
	<td></td>
  #}

</tr>


{# individual torrents #}
{% for item in item.Torrents %}
<tr>

	{# grouped #}
  {# <td /> #}


	{# category icon #}
<td class="center">
<a href="#">Go »</a>
</td>


	{# title #}
	<td class="flexRow">

  {# platform #}
  {% if item.Media %}
    <span title="Platform">📦 {{ item.Media }}</span>
  {% endif %}

  {# format #}
  {% if item.Container %}
    <span title="Format">💾 {{ item.Container }}</span>
  {% endif %}

  {# version #}
  {% if item.Version %}
    <span title="Version"><i class="fa-light fa-square-code"></i> {{ item.Version }}</span>
  {% endif %}

  {# scope #}
  {% if item.Resolution %}
    <span title="Scope">🔎 {{ item.Resolution }}</span>
  {% endif %}

  {# archive #}
  {% if item.Archive %}
    <span title="Archive"><img src="/images/symbols/archive.png" alt="archive" class="icon" /> {{ item.Archive }}</span>
  {% endif %}

  {# license #}
  {% if item.Codec %}
    <span title="License">📜 {{ item.Codec }}</span>
  {% endif %}

  {# alignment #}
  {% if item.Censored %}
    <span title="Alignment" class="good">Aligned</span>
  {% else %}
      <span title="Alignment" class="bad">Not aligned</span>
  {% endif %}

</td>


	{# timeAdded #}
	<td class="nobr" title="{{ item.Time }}">
  {{ item.Time|relativeTime }}
  </td>


	{# data size #}
	<td class="nobr">
  {{ item.Size|get_size }}
  </td>


	{# file count #}
  {#
	<td class="nobr">
  {{ item.HasFile|number_format }}
  </td>
  #}


	{# seeders #}
	<td class="nobr">
    {{ item.Seeders|number_format }}
  </td>


	{# leechers #}
	<td class="nobr">
    {{ item.Leechers|number_format }}
</td>


	{# snatches #}
	<td class="nobr">
    {{ item.Snatched|number_format }}
</td>
</tr>
{% endfor %}