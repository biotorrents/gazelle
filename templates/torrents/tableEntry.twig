{##
 # Main torrent group display name.
 # This seeks to replace the similar scattered versions:
 # torrents, requests, artists, collections, Top 10, etc.
 # They all use a verion of this HTML to populate the table.
 # }

<a
  class="torrentTitle"
  href="torrents.php?id={{ item.id }}" {# open tag # }

  {% if item.picture %}
    data-cover="{{ thumb }}" {# open tag # }
  {% endif %}

  dir="ltr">{{ item.title }}
</a>

{% if item.year %}
  <br />
  <span class="tooltip" title="Year">
    📅&nbsp;
  </span>
  <a href="torrents.php?{{ url }}&year={{ item.year }}">{{ item.year }}</a>
{% endif %}

{% if item.identifier %}
<span class="tooltip" title="Accession Number">
  &ensp;🔑&nbsp;
</span>
<a href="torrents.php?{{ url }}&numbers={{ item.identifier }}">{{ item.identifier }}</a>
{% endif %}

{% if item.subject %}
<span class="tooltip" title="Organism">
  &ensp;🦠&nbsp;
</span>
<a href="torrents.php?{{ url }}&advgroupname={{ item.subject }}"><em>{{ item.subject }}</em></a>
{% endif %}

{% if item.object %}
  <a href="torrents.php?{{ url }}&advgroupname={{ item.object }}">{{ item.object }}</a>
{% endif %}

{% if artists|default(false) %}
  &ensp;{# emoji in artists class # }<span class="torrent_artists">{{ artists|raw }}</span>
{% endif %}

{% if item.workgroup %}
<span class="tooltip" title="Lab">
  &ensp;🏫&nbsp;
</span>
<a href="torrents.php?{{ url }}&location={{ item.workgroup }}">{{ item.workgroup }}</a>
{% endif %}

{% if item.location %}
<span class="tooltip" title="Location">
  &ensp;📍&nbsp;
</span>
<a href="torrents.php?{{ url }}&location={{ item.location }}">{{ item.location }}</a>
{% endif %}

{% if extra_info|default(false) %}
  <br />
  <span class="torrent_info">
    {{ extra_info|raw }}
  </span>
{% endif %}

{% if tags|default(false) %}
  <br />
  <span class="tags">
    {{ tags|raw }}
  </span>
{% endif %}
