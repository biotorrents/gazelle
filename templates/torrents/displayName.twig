{#
  Main torrent group display name.
  This seeks to replace the similar scattered versions:
  torrents, requests, artists, collections, Top 10, etc.
  They all use a verion of this HTML to populate the table.
#}

<a
  class="torrentTitle"
  href="torrents.php?id={{ g.id }}" {# open tag #}

  {% if cover_art %}
    data-cover="{{ thumb }}" {# open tag #}
  {% endif %}

  dir="ltr">{{ g.title }}
</a>

{% if g.year %}
  <br />
  <span class="tooltip" title="Year">
    📅&nbsp;
  </span>
  <a href="torrents.php?{{ url }}&year={{ g.year }}">{{ g.year }}</a>
{% endif %}

{% if g.identifier %}
<span class="tooltip" title="Accession Number">
  &ensp;🔑&nbsp;
</span>
<a href="torrents.php?{{ url }}&numbers={{ g.identifier }}">{{ g.identifier }}</a>
{% endif %}

{% if g.subject %}
<span class="tooltip" title="Organism">
  &ensp;🦠&nbsp;
</span>
<a href="torrents.php?{{ url }}&advgroupname={{ g.subject }}"><em>{{ g.subject }}</em></a>
{% endif %}

{% if g.object %}
  <a href="torrents.php?{{ url }}&advgroupname={{ g.object }}">{{ g.object }}</a>
{% endif %}

{% if artists|default(false) %}
  &ensp;{# emoji in artists class #}<span class="torrent_artists">{{ artists|raw }}</span>
{% endif %}

{% if g.workgroup %}
<span class="tooltip" title="Lab">
  &ensp;🏫&nbsp;
</span>
<a href="torrents.php?{{ url }}&location={{ g.workgroup }}">{{ g.workgroup }}</a>
{% endif %}

{% if g.location %}
<span class="tooltip" title="Location">
  &ensp;📍&nbsp;
</span>
<a href="torrents.php?{{ url }}&location={{ g.location }}">{{ g.location }}</a>
{% endif %}

{% if extra_info|default(false) %}
  <br />
  <span class="torrent_info">
    {{ extra_info|raw }}
  </span>
{% endif %}

{% if tags|default(false) %}
  <br />
  <span class="tags">
    {{ tags|raw }}
  </span>
{% endif %}
