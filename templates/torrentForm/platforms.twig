{# platforms #}
{% if newTorrent %}
	{% for key, items in env.categories %}
		<tr id="{{ items.title|camel }}Platform">
			<th>
				<label for="platform" class="required">Platform</label>
			</th>

			<td>
			{# can't be required #}
				<select id="platform" name="platform" class="select">
					<option value="">The class of technology used</option>
					{% for item in items.platforms %}
						<option value="{{ item }}" {{ (value == item) ? "selected" : "" }}>{{ item }}</option>
					{% endfor %}
				</select>
			</td>
		</tr>
	{% endfor %}

{% else %}
	<input type="hidden" id="platform" name="platform" value="{{ value }}">
{% endif %}
