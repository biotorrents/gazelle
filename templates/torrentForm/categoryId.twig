{# categoryId #}
<tr>
	<th>
		<label for="categoryId" class="required">Category</label>
	</th>

	<td>
		<select id="categoryId" name="categoryId" required>
			{% for item in env.categories %}
				<option value="{{ item.id }}" {{ (value == item.id) ? "selected" : "" }}>{{ item.title }}</option>
			{% endfor %}
		</select>

		<aside id="categoryDescription">
            {# category description #}
		</aside>
	</td>
</tr>
