{# stats #}
<section>
<h3>Stats</h3>

<table class="compact">

<tr>
<th>Groups</th>
<td class="right">{{ collage.torrentCount }}</td>
</tr>

<tr>
<th>Creators</th>
<td class="right">{{ stats.creatorCount }}</td>
</tr>

<tr>
<th>Contributors</th>
<td class="right">{{ stats.contributorCount }}</td>
</tr>

<tr>
<th>Tags</th>
<td class="right">{{ stats.tagCount }}</td>
</tr>

</table>
</section>

{# top creators #}
<section>
<h3>Top creators</h3>

<table class="compact">


{% for key, value in stats.topCreators %}

<tr>
<th>{{ creatorNameById(key, true) }}</th>
<td class="right">{{ value }}</td>
</tr>

{% endfor %}

</table>
</section>

{# top contributors #}
<section>
<h3>Top contributors</h3>

<table class="compact">

{% for key, value in stats.topContributors %}

<tr>
<th>{{ key|formatUsername }}</th>
<td class="right">{{ value }}</td>
</tr>

{% endfor %}

</table>
</section>

{# top tags #}
<section>
<h3>Top tags</h3>

<table class="compact">

{% for key, value in stats.topTags %}

<tr>
<th><a href="/collages.php?action=search&tags={{ tagNameById(key, false) }}">{{ tagNameById(key, false) }}</a></th>
<td class="right">{{ value }}</td>
</tr>

{% endfor %}

</table>
</section>
