{# actions #}
<section>
	<h3>Actions</h3>

	<form>

        {% if can("site_collages_create") %}
            {# add new collage #}
		    <a class="button button-primary" href="/collages.php?action=new">create a collage</a>
        {% endif %}

        {# back to search #}
       	{# <a class="button button-green" href="/collages.php">back to search</a> #}
 

        {# edit buttons #}
        {% if can("site_collages_manage") and not collage.isLocked %}
            {# manage torrents #}
		    <a class="button button-orange" href="/collages.php?action=manage&collageid={{ collage.id }}">manage torrents</a>

            {# edit description #}
            <a class="button button-orange" href="/collages.php?action=edit&collageid={{ collage.id }}">edit description</a>
        {% endif %}

        {# report #}
      <a class="button button-red" href="/reports.php?action=report&type=collage&id={{ collage.id }}">report</a>

      {# delete #}
      {% if can("site_collages_delete") or collage.creatorId == user.core.id %}
      <a class="button button-red" href="/collages.php?action=delete&collageid={{ collage.id }}&auth={{ user.extra.AuthKey }}"
        onclick="return confirm('Are you sure you want to delete this collage?');">delete</a>
        {% endif %}

        <hr>

