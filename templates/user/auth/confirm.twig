{% extends "base.twig" %}

{% block content %}

<h2>Confirm your new account</h2>

{% if response is not null %}
<p class="error">
    {{ response }}
</p>

{% else %}
<p class="info">
    Thanks for confirming your email.
    Please enjoy the site!

    <a href="/rules" class="button-primary">Rules</a>
    <a href="/wiki" class="button">Wiki</a>
</p>

{% endif %}

{% endblock %}